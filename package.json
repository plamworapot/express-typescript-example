{
  "name": "express-typescript-example",
  "version": "0.1.2-alpha.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext .ts",
    "start": "node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn format",
      "yarn lint"
    ]
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
